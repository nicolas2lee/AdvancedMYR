<% provide(:title, "Coordinates | show") %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Latitude:</strong>
  <%= @coordinate.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @coordinate.longitude %>
</p>

<p>
  <strong>Speed:</strong>
  <%= @coordinate.speed %>
</p>

<p>
  <strong>Course:</strong>
  <%= @coordinate.course %>
</p>

<p>
  <strong>Datetime (in UTC):</strong>
  <%= Time.strptime(coordinate.datetime+"UTC", "%Y%m%d%H%M%S%z") %>
</p>

<p>
  <strong>Tracker:</strong>
  <%= @coordinate.tracker_id %>
</p>

<% if is_admin? %>
	<%= link_to 'Edit', edit_coordinate_path(@coordinate) %> | <%= link_to 'Delete', @coordinate, method: :delete, data: { confirm: 'Delete this coordinate ?' } %> |
<% end %>
<%= link_to 'Back to index', coordinates_path %>
