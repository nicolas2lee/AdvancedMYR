<% if !sign_in?  %>
  <%= link_to 'New Member', new_member_path %>
<% end %>
<table>
  <thead>
    <tr >
        <th class=column-member>Name
      <a href= members ><button id="sortbuttonT" name="Name" onclick="myFunctionSort(this.name)" ><img src="/icons/a_z.png"></button></a>
      <a href= members ><button id="sortbuttonD" name="Namebis" onclick="myFunctionSort(this.name)" ><img src="/icons/z_a.png"></button></a></th>
    
    
        <th class=column-member>Logo</th>
    
        <th class=column-member>Email
      <a href= members ><button id="sortbuttonT" name="Email" onclick="myFunctionSort(this.name)" ><img src="/icons/a_z.png"></button></a>
      <a href= members ><button id="sortbuttonD" name="Emailbis" onclick="myFunctionSort(this.name)" ><img src="/icons/z_a.png"></button></a></th>
    
    
    
        <th class=column-member>Role
      <a href= members ><button id="sortbuttonT" name="Role" onclick="myFunctionSort(this.name)" ><img src="/icons/a_z.png"></button></a>
      <a href= members ><button id="sortbuttonD" name="Rolebis" onclick="myFunctionSort(this.name)" ><img src="/icons/z_a.png"></button></a></th>
    
    
    
        <th class=column-member>Team
      <a href= members ><button id="sortbuttonT" name="Team" onclick="myFunctionSort(this.name)" ><img src="/icons/a_z.png"></button></a>
      <a href= members ><button id="sortbuttonD" name="Teambis" onclick="myFunctionSort(this.name)" ><img src="/icons/z_a.png"></button></a></th>
    
    
    
    <% if sign_in? %>
      <% if is_admin? %>
        <th class="column-member-sed" colspan="3"></th>
      <% end %>
    <% end %>
    </tr>
  </thead>

  <tbody>

  <% idMems = []%>
  <% @members.each do |member| %>
    <% idMems << member.id %>
  <% end %>
  <% allMemberdIdSort=sortId(idMems) %>
  <% if allMemberdIdSort != [] %>
    <% for ii in 0..(allMemberdIdSort.size-1) %>
      <% member=Member.find_by_id(allMemberdIdSort[ii]) %>
      <% nameteam="" %>
      <tr>
      <td><%= link_to member.name, member %></td>
		  <% logoimage= image_tag member.logo_url(:index) %>
		  <td><center><%= link_to logoimage , member %></center></td>
      <td><%= member.email %></td>
      <td><%= member.role %></td>
      
      <% rep=[] %>
      <% if  Team.first != nil %>
        <% for i in Team.first.id..Team.last.id%>
          <% myVar = Team.find_by_id(i) %>
          <% if myVar!= nil %>
            <% if member.team.id == myVar.id  %>
              <% rep<<myVar.name %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <% nameteam=tabToString(rep) %>
      <td style="display: block;"><span id="<%="team"+member.id.to_s %>"><%= nameteam %></span>

      <% if sign_in? %>
        <% if is_leader? %>
              <% if nameteam=="" && member.role != "administrator" %>
                <span id="<%="status"+member.id.to_s %>"><%= button_to 'Invite', invite_member_path(member), method: :patch, remote: :true %></span>
                <!-- <td><a href= member/invite ><button id="invitebutton" name=<%= member.name %> type="button" onclick="myFunction(this.name)">Invite</button></a></td> -->
              <% elsif  member.role=="administrator" %>
                <span id="<%="status"+member.id.to_s %>">No team for the admin</span>
              <% elsif (member.team.id == current_user.team.id) && (member.id != current_user.id)%>
                <span id="<%="status"+member.id.to_s %>"><%= button_to 'Kick', kick_member_path(member), method: :patch, remote: :true %></span>
              <% end %>
        <% end %>
      <% end %>
      </td>
      <td><%= link_to 'Show', member_path(member) %></td>
      <% if sign_in? %>
        <% if is_admin? %>
          <td><%= link_to 'Edit', edit_member_path(member) %></td>
          <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>



<script>

  function myFunctionSort(clicked_id) {
    $.cookie("Sort",clicked_id,{path:'/' });
  }
</script>
